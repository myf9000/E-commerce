<%if current_user.id == @product.user.id %>
<hr>
  <h4>Info to send </h4>
  <% @product.order_items.each do |f| %>
    <% if (Order.find(f.order_id).status == "submitted") %>
      <p>Seller: <%= User.find(Product.find(f.product_id).user_id).email %></p>
      <p>Buyer: <%= User.find(Order.find(f.order_id).user_id).email %></p>
      <p>Adress: LOLEK</p>
      <p><%= f.quantity %></p>
      <br>
    <% end %>
  <% end %>
<hr>

<hr>
  <h4>In Basket</h4>
  <% @product.order_items.each do |f| %>
    <% if (Order.find(f.order_id).status != "submitted") %>
      <p>Seller: <%= User.find(Product.find(f.product_id).user_id).email %></p>
      <p>Buyer: <%= User.find(Order.find(f.order_id).user_id).email %></p>
      <p>Adress: LOLEK</p>
      <p><%= f.quantity %></p>
      <br>
    <% end %>
  <% end %>
<hr>

<hr>

<h4>Delivered</h4>
  <% @product.order_items.each do |f| %>
    <% if (Order.find(f.order_id).status == "delivered") %>
      <p>Buyer: <%= User.find(Order.find(f.order_id).user_id).email %></p>
      <br>
      Culture: <%= rating_for User.find(Order.find(f.order_id).user_id), "culture", disable_after_rate: true, enable_half: true, imdb_avg: true %>
      <br>
      Speed: <%= rating_for User.find(Order.find(f.order_id).user_id), "speed", disable_after_rate: true, enable_half: true, imdb_avg: true%>
    <% end %>
  <% end %>


<% end %>



